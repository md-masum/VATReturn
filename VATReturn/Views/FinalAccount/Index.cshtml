@model VATReturn.ViewModel.FinalAccountViewModel

@{
    ViewBag.Title = "Index";
}

<h2>মূল্য সংযোজন কর দাখিলপত্র</h2>

@using (Html.BeginForm("Save", "FinalAccount"))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="row">
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th style="width: 70%" class="text-center">চূড়ান্ত হিসাব</th>
                    <th style="width: 30%" class="text-center">পরিমাণ</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>নীট প্রদেয় (সারি ৬-১৪)</td>
                    <td class="text-right">@Html.EditorFor(model => model.NetPayable, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })</td>
                </tr>
                <tr>
                    <td>ট্রেজারিতে জমা</td>
                    <td class="text-right">@Html.EditorFor(model => model.DepositedTreasury, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })</td>
                </tr>
                <tr>
                    <td>পরবর্তী মাসের প্রারম্ভিক জের</td>
                    <td class="text-right">
                        @Html.EditorFor(model => model.NextMonth, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                    </td>
                </tr>
                <tr>
                    <td>পরিদপ্তর হইতে প্রত্যার্পণ</td>
                    <td class="text-right">
                        @Html.EditorFor(model => model.RefugeesDirectorate, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.RefugeesDirectorate, "", new { @class = "text-danger" })
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="row">
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th style="width: 70%" class="text-center">সরবরাহকারী কর্তৃক উৎসে ভ্যাট কর্তনের হিসাব</th>
                    <th style="width: 30%" class="text-center">পরিমাণ</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>উৎসে কর্তিত মোট ভ্যাটের পরিমাণ</td>
                    <td class="text-right">
                        @Html.EditorFor(model => model.TotalGrocersDischarged, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.TotalGrocersDischarged, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <td></td>
                    <td>
                        @Html.HiddenFor(c => c.Id)
                        <input type="submit" value="Create" class="btn btn-default"/>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
}