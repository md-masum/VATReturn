@model VATReturn.Models.InstitutionInfo
@{
    ViewBag.Title = "Index";
}

<h2 class="text-center">মূল্য সংযোজন কর দাখিলপত্র</h2>

<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        @using (Html.BeginForm("ShowData", "VatReturnForm"))
        {
            @Html.ValidationSummary(true, "Please fix following errors.")
            <div class="form-group">
                @Html.LabelFor(m => m.TaxId)
                @Html.TextBoxFor(m => m.TaxId, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.TaxId)
            </div>
            @Html.HiddenFor(m => m.Id)
            @Html.AntiForgeryToken()
            <button class="btn btn-default"> পরবর্তী ধাপ</button>
        }
    </div>
    <div class="col-md-4"></div>
</div>

@section Scripts {

    @Scripts.Render("~/bundles/jqueryval")
}