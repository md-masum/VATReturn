@model IEnumerable<VATReturn.Models.LocalLvlTax>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@{
    var id = 0;
    foreach (var data in Model)
    {
        id = data.InstitutionInfo.Id;
        break;
    }
    @Html.ActionLink("Create New", "Create", new { id = id })
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.InstitutionInfo.TaxId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InvoiceNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VatRegNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Blink)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Vat)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.InstitutionInfo.TaxId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InvoiceNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VatRegNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Blink)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Vat)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
